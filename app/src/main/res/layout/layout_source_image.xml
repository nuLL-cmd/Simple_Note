<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_gravity="center|top"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardElevation="30dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="#7B1FA2"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha a fonte da imagem"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/txt_title_layout_source"
        android:textSize="17sp"/>

    <ImageButton
        android:layout_width="72dp"
        android:scaleType="centerCrop"
        android:src="@drawable/galery_an_128"
        android:background="@drawable/background_btn_image_source"
        android:layout_height="72dp"
        android:layout_below="@id/txt_title_layout_source"
        android:id="@+id/btn_gallery_layout_source_image"
        android:layout_alignStart="@id/txt_title_layout_source"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"/>

    <ImageButton
        android:layout_width="72dp"
        android:layout_toEndOf="@id/btn_gallery_layout_source_image"
        android:scaleType="centerCrop"
        android:layout_alignTop="@id/btn_gallery_layout_source_image"
        android:layout_alignBottom="@id/btn_gallery_layout_source_image"
        android:src="@drawable/camera"
        android:layout_height="72dp"
        android:background="@drawable/background_btn_image_source"
        android:id="@+id/btn_camera_layout_source_image"

        android:layout_marginStart="30dp"/>

</RelativeLayout>
</androidx.cardview.widget.CardView>